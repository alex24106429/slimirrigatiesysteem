    <children>
        <AnchorPane id="anchorPane" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <Rectangle fill="WHITE" height="400.0" smooth="false" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="324.0" />

                <Button fx:id="loginButton" layoutX="394.0" layoutY="305.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" prefHeight="38.0" prefWidth="177.0" text="Inloggen" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>

                <Label alignment="CENTER" layoutX="120.0" layoutY="24.0" text="Welkom" textAlignment="CENTER" wrapText="false">
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>

                <Rectangle arcHeight="20.0" arcWidth="20.0" fill="WHITE" height="58.0" layoutX="332.0" layoutY="125.0" smooth="false" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="301.0" />

                <TextField fx:id="usernameField" layoutX="401.0" layoutY="133.0" prefHeight="43.0" prefWidth="221.0" promptText="Gebruikersnaam" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;">
                    <font>
                        <Font size="15.0" />
                    </font>
                </TextField>

                <ImageView fitHeight="34.0" fitWidth="39.0" layoutX="350.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@user.png" />
                    </image>
                </ImageView>
            <Rectangle arcHeight="20.0" arcWidth="20.0" fill="WHITE" height="58.0" layoutX="332.0" layoutY="189.0" smooth="false" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="301.0" />
            <TextField fx:id="passwordField" layoutX="401.0" layoutY="197.0" prefHeight="43.0" prefWidth="221.0" promptText="Wachtwoord" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 5px;">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <ImageView fitHeight="34.0" fitWidth="39.0" layoutX="350.0" layoutY="201.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@key.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="181.0" fitWidth="189.0" layoutX="72.0" layoutY="107.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            <Button layoutX="406.0" layoutY="262.0" mnemonicParsing="false" style="-fx-cursor: pointer;" styleClass="buttonAlt" text="Wachtwoord vergeten" />
            </children>
        </AnchorPane>
    </children>
</VBox>
